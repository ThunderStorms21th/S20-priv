# Upating root

ui_print(" ");
ui_print("Magisk's Root...");
package_extract_dir("root", "/tmp/magisk");
run_program("/tmp/scripts/busybox", "unzip", "/tmp/magisk/Magisk.zip", "META-INF/com/google/android/*", "-d", "/tmp/magisk");
