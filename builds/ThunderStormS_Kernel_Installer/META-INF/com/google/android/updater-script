show_progress(1.000000, 0);
ui_print(" ");
ui_print("*********************************************************");
ui_print("                ThunderStorm Kernel OneUI-R              ");
ui_print("                   For Samsung Galaxy S20                ");
ui_print("           Developed by ThundeRStormS Team               ");
ui_print("           G980F, G985F, G981B, G986B, G988B             ");
ui_print("*********************************************************");
ui_print(" ");
ui_print(" ");

package_extract_dir("minstall/bin", "/tmp");
set_metadata_recursive("/tmp/scripts", "uid", 0, "gid", 0, "dmode", 0755, "fmode", 0777);

ifelse(is_mounted("/system"), unmount("/system"));
ifelse(is_mounted("/vendor"), unmount("/vendor"));
ifelse(is_mounted("/product"), unmount("/product"));
ifelse(is_mounted("/prism"), unmount("/prism"));
ifelse(is_mounted("/optics"), unmount("/optics"));
ifelse(is_mounted("/odm"), unmount("/odm"));
# ifelse(is_mounted("/data"), unmount("/data"));
ifelse(is_mounted("/efs"), unmount("/efs"));
ifelse(is_mounted("/sec_efs"), unmount("/sec_efs"));

# Permissions

run_program("/tmp/scripts/busybox","blockdev","--setrw","/dev/block/dm-0");
run_program("/tmp/scripts/busybox","blockdev","--setrw","/dev/block/dm-1");
run_program("/tmp/scripts/busybox","blockdev","--setrw","/dev/block/dm-2");
run_program("/tmp/scripts/busybox","blockdev","--setrw","/dev/block/dm-3");


ui_print(" ");
ui_print("@ThundeRStormS - Mounting partitions...");
mount("ext4", "EMMC", "/dev/block/dm-0", "/system_root");
mount("ext4", "EMMC", "/dev/block/dm-1", "/vendor");
mount("ext4", "EMMC", "/dev/block/dm-2", "/product");


#Cleanning

run_program("/tmp/scripts/initial_settings.sh");


#Extracting scripts	
	

#g980

if file_getprop("/tmp/aroma/boot.prop", "selected.1") == "1"  then
if is_substring("G980", getprop("ro.boot.bootloader")) then
ui_print("@G980 Detected");
ui_print("@Installation : EdYoBlue Kernel");
package_extract_file("edyo/g980/SM980F-ed-boot.img", "/dev/block/platform/13100000.ufs/by-name/boot");
endif;
package_extract_dir("system1/system", "/system_root/system");
endif;

if file_getprop("/tmp/aroma/boot.prop", "selected.1") == "2"  then
if is_substring("G980", getprop("ro.boot.bootloader")) then
ui_print("@G980 Detected");
ui_print("@Installation : ThunderStormS Kernel");
package_extract_file("thunderstorm/g980/SM980F-boot.img", "/dev/block/platform/13100000.ufs/by-name/boot");
endif;
package_extract_dir("system/system", "/system_root/system");
endif;

#g981

